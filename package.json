{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "ignoreChanges": [
    "ignored-file",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "lerna": "^4.0.0"
  },
  "dependencies": {}
}
